{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":enableVulnerabilityAlerts",
    ":semanticCommitTypeAll(update)"
  ],

  "packageRules": [
    {
      "matchDatasources": ["golang-version"],
      "rangeStrategy": "bump"
    }
  ],
  
  "postUpdateOptions": ["gomodTidy"]
}
